{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020", // Target modern Node.js versions typically bundled with VSCode
    "lib": ["es2020"],
    "outDir": "out", // Output directory for compiled JS files
    "rootDir": "src", // Source directory for TS files
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
